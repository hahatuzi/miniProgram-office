.login_container{
  margin:120rpx 40rpx 0;
  overflow: hidden;
}
.title{
  font-size: 40rpx;
  font-weight: 600;
}
.describe{
  font-size: 24rpx;
  color: rgb(124, 124, 124);
}
.form{
  margin: 90rpx auto 120rpx;
}
.password_txt{
  margin-top: 20rpx;
}
.input{
  position: relative;
  border-bottom: 1px solid #ccc;
}
.password_icon{
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}
input{
  color: #ccc;
  font-size: 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin-right: 70rpx;
  /* border-bottom: 1px solid #ccc; */
}
.login_btn{
  width: 100%;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

