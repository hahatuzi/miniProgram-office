/**index.wxss**/
.info_container{
  height: 100vh;
  background-color: #F5EEEE;
}
.info_header{
  /* position: fixed; */
  /* top: 0; */
  width: 100%;
  height: 240rpx;
  line-height: 240rpx;
  background-color: #18d888;
  border-radius: 0 0px 18px 18px;
}
.header_pic{
  position: relative;
  width: 120rpx;
  height:120rpx;
  display: inline-block;
  margin-left: 40rpx;
  border-radius: 50%;
  /* overflow: hidden; */
  vertical-align: middle;
}
.sex{
  background-color: #1890ff;
  position: absolute;
  right: 0;
  top: 0;
  transform: translate(25%,-25%);
  width: 35rpx;
  height: 35rpx;
  box-sizing: content-box;
  padding: 7rpx;
  border-radius: 50%;

}
image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  vertical-align: top;
}
.header_txt{
  display: inline-block;
  width: 450rpx;
  text-align: center;
  font-weight: 600;
  font-size: 42rpx;
  color: #fff;
}
.header_edit{
  width: 42rpx;
  height: 42rpx;
  vertical-align:middle;
}
.info_body{
  width: 100%;
  margin: 0 auto;
}
ul{
  display: block;
  width: 90%;
  margin: 0 auto;
}
li{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin: 12rpx 0;
  padding:0rpx 15rpx;
  /* font-size: 32rpx; */
}
.info_bottom{
  width: 90%;
  margin: 30rpx auto 140rpx;
}
.bottom_btn{
  width: 100%!important;
  height: 80rpx;
  font-weight: 400;
  color: #4b4b4b;
  background-color: #fff;
  margin: 6rpx 0;
}
